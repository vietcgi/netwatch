#!/bin/sh
# Pre-commit hook for netwatch
# Runs cargo fmt and cargo clippy to ensure code quality

set -e

echo "ğŸ¦€ Running pre-commit hooks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ Cargo not found. Please install Rust."
    exit 1
fi

# Run cargo fmt to format code
echo "ğŸ“ Running cargo fmt..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting issues found. Running cargo fmt to fix..."
    cargo fmt --all
    echo "âœ… Code formatted. Please stage the changes and commit again."
    exit 1
fi

# Run cargo clippy for linting
echo "ğŸ” Running cargo clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Please fix them before committing."
    exit 1
fi

# Run tests (quick check)
echo "ğŸ§ª Running tests..."
if ! cargo test --all; then
    echo "âŒ Tests failed. Please fix them before committing."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"